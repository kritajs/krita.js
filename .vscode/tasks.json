{
  "tasks": [
    {
      "type": "shell",
      "label": "Generate build files",
      "command": "cmake",
      "args": [
        "-G",
        "MinGW Makefiles",
        "-D",
        "CMAKE_C_COMPILER=gcc",
        "-D",
        "CMAKE_CXX_COMPILER=g++",
        "-B",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Generate build files"
    },

    {
      "type": "shell",
      "label": "Build",
      "command": "cmake",
      "args": ["--build", "build", "--config", "Release"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build"
    }
  ],
  "version": "2.0.0"
}
