{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build plugin",
      "command": "cmake",
      "args": ["--build", "build", "--target", "install"],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build and package the krita.js plugin."
    },
    {
      "type": "shell",
      "label": "Generate build project",
      "command": "cmake -B build -G 'MinGW Makefiles'",
      "detail": "Generate the Makefiles used to build krita.js.",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Run bindgen",
      "command": "./ENV/Scripts/python",
      "args": [
        "./src/bindgen.py",
        "${workspaceFolder}/deps/krita",
        "-o",
        "${workspaceFolder}/src/plugin/libkis"
      ],
      "options": {
        "cwd": "${workspaceFolder}/tools/bindgen"
      },
      "detail": "Generate custom libkis headers."
    },
    {
      "type": "shell",
      "label": "Run bindgen-ts",
      "command": "./ENV/Scripts/python",
      "args": [
        "./src/generators/typescript/bindgen-ts.py",
        "${workspaceFolder}/deps/krita",
        "-o",
        "${workspaceFolder}/src/plugin/libkis"
      ],
      "options": {
        "cwd": "${workspaceFolder}/tools/bindgen"
      },
      "problemMatcher": ["$gcc"],
      "detail": "Generate TS declaration files for libkis."
    }
  ],
  "version": "2.0.0"
}
